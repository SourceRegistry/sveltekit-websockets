{
  "name": "@sourceregistry/sveltekit-websockets",
  "version": "1.0.0",
  "description": "Typed WebSocket infrastructure for SvelteKit â€” per-request or continuous connections, full back-end lifecycle, and a reactive Svelte component.",
  "author": "A.P.A. Slaa (a.p.a.slaa@projectsource.nl)",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run prepack",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "prepack": "svelte-kit sync && svelte-package && publint",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest",
    "test": "npm run test:unit -- --run",
    "docs:build": "typedoc --entryPoints src/lib/client/index.ts --entryPoints src/lib/server/index.ts --entryPoints src/lib/vite/index.ts --out docs --name \"sveltekit-websockets\" --theme default --excludePrivate --excludeProtected"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "svelte": "./dist/client/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/client/index.d.ts",
      "svelte": "./dist/client/index.js",
      "default": "./dist/client/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "svelte": "./dist/client/index.js",
      "default": "./dist/client/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js"
    },
    "./vite": {
      "types": "./dist/vite/index.d.ts",
      "import": "./dist/vite/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SourceRegistry/sveltekit-websockets.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@sveltejs/adapter-node": "^5.2.0",
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^7.0.0",
    "@sveltejs/kit": "^2.49.1",
    "@sveltejs/package": "^2.5.7",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@vitest/browser-playwright": "^4.0.15",
    "playwright": "^1.57.0",
    "publint": "^0.3.15",
    "svelte": "^5.45.6",
    "svelte-check": "^4.3.4",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vitest": "^4.0.15",
    "vitest-browser-svelte": "^2.0.1",
    "typedoc": "^0.28.14",
    "@types/ws": "^8.18.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/SourceRegistry/sveltekit-websockets/issues"
  },
  "homepage": "https://github.com/SourceRegistry/sveltekit-websockets#readme",
  "dependencies": {
    "ws": "^8.18.3"
  },
  "keywords": [
    "svelte",
    "kit",
    "websockets",
    "ws",
    "sveltekit"
  ],
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "sveltekit-websockets(release): ðŸš€ v${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
